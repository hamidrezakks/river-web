{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "ordered-imports": false,
    "no-default-export": false,
    "semicolon": [
      true,
      "always"
    ],
    "no-bitwise": false,
    "no-var-requires": false,
    "prefer-for-of": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "./src/app/services/sdk/messages/*.js",
      "./src/app/services/electron/*.ts",
      "bin/*.*",
      "wasm/*"
    ]
  }
}
